
<div class="container d-flex p-2">
<% @flats.each do |flat| %>
  <div class="card-trip">
    <img class="small-image" src=<%= flat.url %> />
    <div class="card-trip-infos">
      <div>
        <h2><%= flat.name %></h2>
        <p><%= flat.address %></p>
      </div>
      <h2 class="card-trip-pricing">$<%= flat.price_per_night %></h2>
    </div>
    <div class="links">
    <%= link_to "More info", flats_path, class:"" %>
    <%= link_to "Edit", flats_path, class:"" %>
    <%= link_to "Remove", flats_path, class:"" %>
  </div>
  </div>
<% end %>
</div>
